{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": null,
        "healthcheckPath": "/",
        "healthcheckTimeout": 120,
        "restartPolicyType": "ALWAYS"
    },
    "environments": {
        "production": {
            "deploy": {
                "restartPolicyType": "ALWAYS",
                "healthcheckPath": "/",
                "healthcheckTimeout": 180
            }
        }
    }
}